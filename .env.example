# Kepler MCP Server Configuration
# Copy this file to .env and adjust values as needed

# Core Configuration
KEPLER_MCP_APP_NAME="Kepler MCP Server"
KEPLER_MCP_LOG_LEVEL=INFO
KEPLER_MCP_ENVIRONMENT=local
KEPLER_MCP_TRANSPORT_MODE=stdio
KEPLER_MCP_HOST=0.0.0.0
KEPLER_MCP_PORT=8000

# Rate Limiting
KEPLER_MCP_RATE_LIMIT_REQUESTS_PER_MINUTE=60
KEPLER_MCP_RATE_LIMIT_BURST=10

# OAuth User Authentication (uncomment to enable)
# KEPLER_MCP_OAUTH_USER_AUTH_ENABLED=true
# KEPLER_MCP_OAUTH_AUTHORIZATION_URL=https://gitlab.example.com/oauth/authorize
# KEPLER_MCP_OAUTH_TOKEN_URL=https://gitlab.example.com/oauth/token
# KEPLER_MCP_OAUTH_CLIENT_ID=your_client_id
# KEPLER_MCP_OAUTH_CLIENT_SECRET=your_client_secret
# KEPLER_MCP_OAUTH_REDIRECT_URI=http://localhost:8000/oauth/callback
# KEPLER_MCP_OAUTH_SCOPE=read_api read_user
# KEPLER_MCP_OAUTH_USERINFO_URL=https://gitlab.example.com/api/v4/user

# Token Encryption (required for persistent token storage)
# Generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# KEPLER_MCP_TOKEN_ENCRYPTION_KEY=your_fernet_key_here
# KEPLER_MCP_TOKEN_STORE_PATH=./data/tokens.enc

# OAuth Service Authentication (for service-to-service auth)
# KEPLER_MCP_OAUTH_SERVICE_AUTH_ENABLED=true
# KEPLER_MCP_OAUTH_SERVICE_CLIENT_ID=service_client_id
# KEPLER_MCP_OAUTH_SERVICE_CLIENT_SECRET=service_client_secret
# KEPLER_MCP_OAUTH_SERVICE_TOKEN_URL=https://auth.example.com/oauth/token
# KEPLER_MCP_OAUTH_SERVICE_SCOPE=api
